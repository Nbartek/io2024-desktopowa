<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PocztaDesktop"
             x:Class="PocztaDesktop.App">
    <Application.Resources>

        <ResourceDictionary>
            <!-- Motywy -->
            <Color x:Key="LightBackgroundColor">#FFFFFF</Color>
            <Color x:Key="LightTextColor">#000000</Color>
            <Color x:Key="DarkBackgroundColor">#121212</Color>
            <Color x:Key="DarkTextColor">#FFFFFF</Color>

            <!-- Dynamiczne zasoby -->
            <Color x:Key="BackgroundColor">#FFFFFF</Color>
            <Color x:Key="TextColor">#000000</Color>
        </ResourceDictionary>

        <!-- Globalne dynamiczne zasoby -->
        <ResourceDictionary>
            <Color x:Key="BackgroundColor" >#FFFFFF</Color>
            <Color x:Key="TextColor">#000000</Color>
            <Color x:Key="Primary">#6200EE</Color>
        </ResourceDictionary>
    
    </Application.Resources>
</Application>
