<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PocztaDesktop.Views.SettingsPage"
             BackgroundColor="{DynamicResource BackgroundColor}"
             Title="SettingsPage">
    <VerticalStackLayout>
        <Button Text="Zmień motyw na ciemny" TextColor="{DynamicResource TextColor}" Clicked="OnChangeThemeToDark" />
        <Button Text="Zmień motyw na jasny"  TextColor="{DynamicResource TextColor}" Clicked="OnChangeThemeToLight" />
    </VerticalStackLayout>
</ContentPage>